{{ $recipient := promptStringOnce . "recipient" "Recipient (age...)" -}}
{{ $machine := promptStringOnce . "machine" "Machine type (private, <company>, other)" -}}

encryption = "age"

[age]
  identity = "~/.config/chezmoi/key.txt"
  recipient = {{ $recipient | quote }}

[data]
  machine = {{ $machine | quote }}

[diff]
  pager = "delta"
